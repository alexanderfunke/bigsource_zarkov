/** * @author flexughh */class MainClassAS2 {	private static var _instance : MainClassAS2;		/** 	 * Initial MTASC Method Call 	 */  	public static function main(p_movieref : MovieClip) : Void   	{  		if (_instance == null)  		{  			_instance = new MainClassAS2(p_movieref);  		}  	}      	/** 	 * MainClass Constructor 	 */  	private function MainClassAS2(p_movieref : MovieClip)  	{  		init(p_movieref);  	} 		/** 	 * create movieclip for application and loader 	 */  	private function init(p_movieref : MovieClip) : Void  	{  		var mc_application:MovieClip = p_movieref.createEmptyMovieClip("mc_application", p_movieref.getNextHighestDepth()); 		mc_application._x = 0;		mc_application._y = 0;	}  }