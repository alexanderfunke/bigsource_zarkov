package de.bigsource.utils.math.geom {	/**	 * @author kimchristiansen	 */	public class SimpleCircle extends SimplePoint	{		public var r:Number = 0;				public function SimpleCircle(p_x:Number=0, p_y:Number=0, p_r:Number=0) 		{			super(p_x,p_y);			r = p_r;		}				public function get randomAreaPoint():SimplePoint		{			var p : SimplePoint = new SimplePoint();			var ran:Number = Math.random()*2*Math.PI;			var ranr:Number = Math.random()*r;						p.x = x + Math.cos(ran)*ranr;			p.y = y + Math.sin(ran)*ranr;						return p;		}				public function get randomOutlinePoint():SimplePoint		{			var p : SimplePoint = new SimplePoint();			var ran:Number = Math.random()*2*Math.PI;			p.x = x + Math.cos(ran)*r;			p.y = y + Math.sin(ran)*r;						return p;		}	}}