package de.bigsource.utils.math.geom {	import de.bigsource.utils.math.geom.SimplePoint;	/**	 * @author kimchristiansen	 */	public class SimpleRectangle extends SimplePoint	{		public var w:Number = 0;	// width		public var h:Number = 0;	// height				public function SimpleRectangle(p_x:Number=0,p_y:Number=0,p_w:Number=0,p_h:Number=0) 		{			super(p_x,p_y);			w = p_w;			h = p_h;		}				public function get randomAreaPoint():SimplePoint		{			var p : SimplePoint = new SimplePoint();						p.x = x + Math.random()*w;			p.y = y + Math.random()*h;						return p;		}				public function get randomOutlinePoint():SimplePoint		{			var p : SimplePoint = new SimplePoint();						// TODO: calc random outlinepoint						return p;		}	}}